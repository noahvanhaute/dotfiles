\defbeamertemplate*{frametitle}{nvhslides}[1][]{
	{\usebeamerfont{frametitle}\insertframetitle\par}%
	\ifx\insertframesubtitle\@empty%
	\else%
		{\usebeamercolor[fg]{framesubtitle}\usebeamerfont{framesubtitle}\insertframesubtitle}%
	\fi%
}

\defbeamertemplate*{footline}{nvhslides}{
	\hfill%
	\raisebox{2em}[0pt][0pt]{%
		\usebeamercolor[fg]{page number in head/foot}%
		\usebeamerfont{page number in head/foot}%
		\insertframenumber%
		\hspace{\dimexpr(\paperwidth-\linewidth)/2\relax}%
	}%
}

