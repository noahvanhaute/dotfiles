\mode<presentation>

\RequirePackage{unicode-math}
\RequirePackage{tikz}

\useinnertheme{nvhslides}
\useoutertheme{nvhslides}
\usefonttheme{nvhslides}
\usecolortheme{nvhslides}

% Turn off navigation symbols
\setbeamertemplate{navigation symbols}{}

\setmainfont[
	BoldFont={IBMPlexSans-Bold.otf},
	ItalicFont={IBMPlexSans-Italic.otf},
	BoldItalicFont={IBMPlexSans-BoldItalic.otf},
	RawFeature={+zero}
]{IBMPlexSans-Regular.otf}
\setsansfont[
	BoldFont={IBMPlexSans-Bold.otf},
	ItalicFont={IBMPlexSans-Italic.otf},
	BoldItalicFont={IBMPlexSans-BoldItalic.otf},
	RawFeature={+zero}
]{IBMPlexSans-Regular.otf}
\setmonofont[
	BoldFont={IBMPlexMono-Bold.otf},
	ItalicFont={IBMPlexMono-Italic.otf},
	BoldItalicFont={IBMPlexMono-BoldItalic.otf},
	RawFeature={+zero}
]{IBMPlexMono-Regular.otf}
\setmathfont[RawFeature={+zero}]{IBMPlexMath-Regular.otf}
\usefonttheme{professionalfonts}

% Set default TikZ arrow shape
\tikzset{>=latex}

\newcommand{\sectionSubtitle}{}
\newcommand{\setSectionSubtitle}[1]{\renewcommand{\sectionSubtitle}{#1}}

\mode<all>
