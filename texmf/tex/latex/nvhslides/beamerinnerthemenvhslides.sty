\mode<presentation>

\defbeamertemplate*{title page}{nvhslides}[1][]{
	\vfill%
	\centering%
	\hfill%
	\begin{beamercolorbox}[wd=13cm,center,#1]{title page header}
		{\usebeamercolor[fg]{title}\usebeamerfont{title}\inserttitle\par}%
	\end{beamercolorbox}
	% Two hfills are needed, one just gives a flush right
	% See https://tex.stackexchange.com/questions/6370/how-to-center-a-beamercolorbox
	\hfill\hfill\par%
	\ifx\insertsubtitle\@empty%
	\else%
		{\usebeamercolor[fg]{subtitle}\usebeamerfont{subtitle}\insertsubtitle\par}%
	\fi
	\vspace{0.8em}%
	{\usebeamercolor[fg]{author}\usebeamerfont{author}\insertauthor\par}%
	\vspace{0.2em}%
	{\usebeamercolor[fg]{date}\usebeamerfont{date}\insertdate}%
	\vspace{0.2em}%
	\inserttitlegraphic%
	\vfill
}

\defbeamertemplate*{section page}{nvhslides}[1][]{
	\vfill%
	{\usebeamercolor[fg]{section title}\usebeamerfont{section title}\insertsection\par}%
	\ifx\sectionSubtitle\@empty%
	\else%
		{\usebeamercolor[fg]{framesubtitle}\usebeamerfont{framesubtitle}\:\sectionSubtitle}%
	\fi
	\vfill%
}

\setbeamertemplate{itemize item}[circle]
\setbeamertemplate{itemize subitem}[circle]
\setbeamertemplate{itemize subsubitem}[circle]

\mode<all>
