#!/usr/bin/env bash

file=$1

if [[ -x "$file" ]]; then
	answer=$(printf 'Open the file\nRun it' | rofi -dmenu -i -p 'File is executable, what do you want to do?')
	case "$answer" in
		'Open the file')
			xdg-open "$file" ;;
		'Run it')
			"$file" ;;
		*)
			exit 1 ;;
	esac
else
	xdg-open "$file"
fi
